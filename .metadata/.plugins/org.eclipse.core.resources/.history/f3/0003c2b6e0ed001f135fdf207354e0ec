 <%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<%@ page import="org.springframework.core.io.Resource" %>
<html>
<head>
    <title>Car Sale Confirmation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 50px;
        }
        .container {
            width: 50%;
            margin: auto;
            padding: 20px;
            border: 1px solid #ddd;
            box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
        }
        img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }
        .success {
            color: green;
            font-size: 18px;
        }
        .error {
            color: red;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Car Sale Confirmation</h2>

        <%-- Display success message --%>
        <c:if test="${not empty message}">
            <p class="success">${message}</p>
        </c:if>

        <%-- Display error message if the car sale fails --%>
        <c:if test="${not empty errorMessage}">
            <p class="error">${errorMessage}</p>
        </c:if>

        <%-- Display car details --%>
        <c:if test="${not empty carModel}">
            <p><strong>Car Model:</strong> ${carModel}</p>
        </c:if>

        <c:if test="${not empty carName}">
            <p><strong>Car Name:</strong> ${carName}</p>
        </c:if>

        <c:if test="${not empty year}">
            <p><strong>Year:</strong> ${year}</p>
        </c:if>

        <c:if test="${not empty price}">
            <p><strong>Price:</strong> $${price}</p>
        </c:if>

        <%-- Display car image --%>
        <c:if test="${not empty carImage}">
            <p><strong>Car Image:</strong></p>
            <img src="${pageContext.request.contextPath}/images/${carImage.filename}" alt="Car Image">
        </c:if>

        <br><br>
        <a href="${pageContext.request.contextPath}/cars/sellCar">List Another Car</a>
        <br>
        <a href="${pageContext.request.contextPath}/cars/buyCar">Buy a Car</a>
    </div>
